<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.mda.ux_ui.MainActivity"
    android:background="@drawable/tela_fundo">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img1"
        android:layout_gravity="center"
        android:src="@drawable/rebel"
        android:layout_marginTop="30dp"        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START WARS"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/cavalo"
        android:background="@drawable/fundo_linear"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/senha"
        android:background="@drawable/fundo_linear"/>






</LinearLayout>
